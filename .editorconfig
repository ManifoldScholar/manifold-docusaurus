# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[**.{js,jsx,json}]
indent_style = space
indent_size = 2

[**.{css,scss}]
indent_style = space
indent_size = 2

[**.{rb,pp}]
indent_style = space
indent_size = 2

[**.php]
indent_style = space
indent_size = 4

[**.{yml,yaml}]
indent_style = space
indent_size = 2

[**.{txt}]
indent_style = space
indent_size = 2

[**.{html,htm,erb,twig,svg}]
indent_style = space
indent_size = 4
